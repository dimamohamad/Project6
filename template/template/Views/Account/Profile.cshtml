
@model template.Models.User

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Link to the external stylesheet -->
<link rel="stylesheet" href="~/css/style.css" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="profile-box">
        <h2>Profile</h2>

        @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.UserId)

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Image">Profile Image</label><br />
                @if (Model.Image != null)
                {
                    <img src="@Url.Content(Model.Image)" alt="Profile Image" class="img-fluid" style="width:150px;height:150px;" />
                }
                <br />
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <button type="submit" class="btn btn-light  btn-block">Save</button>
        }
    </div>
</div>
<style>
    .profile-box {
        width: 100%;
        max-width: 600px;
        height: 600px;
        background-color: #000;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 1);
        border-radius: 10px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 6rem;
        color: white;
    }

        .profile-box img {
            display: block;
            margin: 0 auto 20px auto; /* Center image horizontally and add margin below */
        }

        .profile-box h2 {
            text-align: center;
            margin-bottom: 20px; /* Add space below the heading */
        }

        .profile-box .form-group {
            margin-bottom: 20px; /* Add space between form groups */
        }

        .profile-box .btn {
            margin-top: auto; /* Push the button to the bottom of the form */
        }
</style>
