@model IEnumerable<template.Models.Product>

@{
    ViewBag.Title = "Shop Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as List<template.Models.Category>;
}



<div class="container" style="padding-top: 100px;">
    <div class="row mb-4 justify-content-center">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Shop", "Product")">
                <div class="input-group">
                    <select name="categoryId" class="form-select">
                        <option value="">-- Select a Product --</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </form>
        </div>
    </div>




    <div class="container" style="padding-top: 100px;">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C")</p>
                            <a href="@Url.Action("Details", "Product", new { productId = product.ProductId })" class="btn">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <style>
        .card-img-top {
            height: 260px;
            object-fit: cover;
        }

        .card-body {
            text-align: center;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .btn {
            background-color: #000;
            border-color: #000;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn:hover {
                background-color: #555;
                border-color: #555;
                color: #fff;
            }

        .card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }
    </style>
